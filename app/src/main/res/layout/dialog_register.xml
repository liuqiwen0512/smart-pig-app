<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource"
    android:background="@android:color/white">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="720:948"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/img_user_bg2"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="43dp"
        android:src="@drawable/img_back"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="87dp"
        android:src="@mipmap/ic_launcher"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/logo"
        app:layout_constraintTop_toTopOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:text="@string/app_name1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/register_label"
        style="@style/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textSize="24sp"
        android:text="注册新用户"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/phone"
        style="@style/text_register_content"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:singleLine="true"
        android:inputType="phone"
        android:hint="请输入手机号"
        android:background="@drawable/shape_round_corner_12"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/verification_code_value"
        style="@style/text_register_content"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="150dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:singleLine="true"
        android:inputType="phone"
        android:hint="请输入验证码"
        android:background="@drawable/shape_round_corner_12"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/verification_code_send"
        style="@style/text_register_content"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/verification_code_value"
        app:layout_constraintTop_toTopOf="@id/verification_code_value"
        app:layout_constraintBottom_toBottomOf="@id/verification_code_value"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:textColor="@color/colorButton"
        android:text="@string/verification_code_send"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/password"
        style="@style/text_register_content"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verification_code_value"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:hint="请输入密码"
        android:background="@drawable/shape_round_corner_12"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/password_visible"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/password"
        app:layout_constraintRight_toRightOf="@id/password"
        app:layout_constraintBottom_toBottomOf="@id/password"
        android:paddingRight="16dp"
        android:scaleType="center"
        android:src="@drawable/selector_login_pwd_visible"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:visibility="gone"
        android:id="@+id/error"
        style="@style/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/submit"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/img_error"
        android:drawablePadding="5dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/submit"
        style="@style/text_title"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="立刻登录"
        android:backgroundTint="@color/colorSelected"
        android:background="@drawable/shape_outline_round_corner_30" />

</androidx.constraintlayout.widget.ConstraintLayout>