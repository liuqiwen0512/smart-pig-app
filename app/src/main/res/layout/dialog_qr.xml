<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/motion_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:backgroundTint="@android:color/white"
    android:background="@drawable/shape_outline_round_corner_6">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/qr_title"
        style="@style/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/qr_view"
        android:paddingLeft="10dp" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/qr_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/qr_prompt"
        style="@style/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qr_view"
        android:layout_marginLeft="10dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/qr_time"
        style="@style/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/qr_prompt"
        app:layout_constraintLeft_toLeftOf="@id/qr_prompt" />

</androidx.constraintlayout.widget.ConstraintLayout>